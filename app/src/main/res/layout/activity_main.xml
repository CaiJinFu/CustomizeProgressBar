<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <ProgressBar
      android:id="@+id/pb_hori_default"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="250dp"
      android:layout_height="50dp"
      android:max="100"
      android:progress="0"
      />

    <ProgressBar
      android:id="@+id/pb_hori"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:max="100"
      android:minHeight="50dp"
      android:progress="0"
      android:progressDrawable="@drawable/pb_hori_bg"
      />

    <ProgressBar
      android:id="@+id/pb_hori_send"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="250dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:max="100"
      android:progress="0"
      android:progressDrawable="@drawable/pb_hori_send_bg"
      android:secondaryProgress="10"
      />

    <com.caijinfu.customizeprogressbar.CoolProgressBar
      android:id="@+id/cpb_hori"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:max="100"
      android:minHeight="50dp"
      android:progress="0"
      android:progressDrawable="@drawable/pb_hori_bg"
      app:text="开始下载"
      app:textColor="@color/black"
      app:textSize="18sp"
      />

  </LinearLayout>
</androidx.core.widget.NestedScrollView>
