<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <ProgressBar
      android:id="@+id/pb_hori_default"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="250dp"
      android:layout_height="50dp"
      android:max="100"
      android:progress="0"
      />

    <FrameLayout
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      >

      <ProgressBar
        android:id="@+id/pb_hori"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="100"
        android:minHeight="50dp"
        android:progress="0"
        android:progressDrawable="@drawable/pb_hori_bg"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="当前进度"
        android:textSize="20sp"
        />

    </FrameLayout>

    <ProgressBar
      android:id="@+id/pb_hori_send"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="250dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:max="100"
      android:progress="0"
      android:progressDrawable="@drawable/pb_hori_send_bg"
      android:secondaryProgress="10"
      />

    <com.caijinfu.customizeprogressbar.CoolProgressBar
      android:id="@+id/cpb_hori"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:minHeight="50dp"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:max="100"
      android:progress="0"
      android:progressDrawable="@drawable/pb_hori_bg"
      />

  </LinearLayout>
</androidx.core.widget.NestedScrollView>
